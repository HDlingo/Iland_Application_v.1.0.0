<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailYunnian">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/informlushan_day"/>
    <ImageButton
        android:id="@+id/detail_tu_back"
        android:layout_width="30dp"
        android:layout_height="@dimen/main_page_button_size"
        android:scaleType="fitCenter"
        android:src="@mipmap/backtu_day"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/detail_page_button_padding_top"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/detail_page_button_padding_side"
        android:background="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/detail_tu_setting"
        android:layout_width="30dp"
        android:layout_height="@dimen/main_page_button_size"
        android:scaleType="fitCenter"
        android:src="@mipmap/settingtu_day"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/detail_page_button_padding_top"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/detail_page_button_padding_side"
        android:background="@android:color/transparent"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/detail_page_button_padding_bottom"
        >

        <ImageButton
            android:id="@+id/detail_deer_shan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/detail_page_button_size"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/deerlushan_day" />

        <ImageButton
            android:id="@+id/detail_start_shan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/detail_page_button_size"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/startlushan_day" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>