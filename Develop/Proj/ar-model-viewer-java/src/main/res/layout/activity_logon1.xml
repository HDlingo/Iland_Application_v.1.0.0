<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogonActivity1"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/zhuce1_beijing_cut"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/logon1_nickname"
        android:layout_marginTop="5dp"
        android:layout_width="290dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:background="@android:color/transparent"
        android:hint=" "
        android:textColorHint="@android:color/transparent"
        android:textColor="@color/white"
        android:maxLines="1"
        android:lines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        />
    <EditText
        android:id="@+id/logon1_account_name"
        android:layout_width="290dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toBottomOf="@+id/logon1_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/transparent"
        android:hint=" "
        android:textColorHint="@android:color/transparent"
        android:textColor="@color/white"
        android:maxLines="1"
        android:lines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logon1_account_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        android:id="@+id/password_layout"
        >

        <EditText
            android:id="@+id/logon1_password"
            android:layout_width="250dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:hint=" "
            android:textColorHint="@android:color/transparent"
            android:textColor="@color/white"
            android:maxLines="1"
            android:lines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:selectAllOnFocus="true"
            />

        <ImageButton
            android:id="@+id/zhuce1_password_readable"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@+id/logon1_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/zhuce1_kejian" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        android:id="@+id/zhuce1_next_step"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@mipmap/zhuce1_xiayibu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_layout"
        android:layout_marginTop="40dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>